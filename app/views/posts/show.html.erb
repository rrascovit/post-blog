<div class="show">
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-md-3"></div>
      <div class="col-xs-6 col-md-6">
        <p class="date">Created at <%= @post.created_at.strftime('%b %d') %></p>

        <h2 class="title"><%= @post.title %></h2>
        <p class="content"><%= @post.content %></p>
        <h5>Author: <%= @post.user.username %></h5>
        <% if current_user  %>
          <%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-info" %>
          <%= link_to "Delete", post_path(@post), method: "delete", class: "btn btn-danger" %>
        <% end %>
      </div>
      <div class="col-xs-3 col-md-3"></div>
    </div>
  </div>
</div>