<div class="new-post">
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-md-3"></div>
      <div class="col-xs-6 col-md-6">
        <div class="form">
          <%= form_for @post do |f| %>
            <% if @post.errors.any? %>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            <% end %>
            <div class="form-group">
              <%= f.label :title, "Title: " %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_area :content, class: "form-control", placeholder: "Write your post", :rows => "10" %>
            </div>
            <div class="actions">
              <%= f.submit "Save", class: "btn btn-primary" %>
              <%= link_to "Cancel", index_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-3 col-md-3"></div>
      </div>
    </div>
  </div>
</div>