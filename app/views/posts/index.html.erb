<div class="posts">
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-md-3"></div>
      <div class="col-xs-6 col-md-6">
        <% current_user.posts.each do |post| %>
          <div class="row">
            <h6 class="date"><%= post.created_at.strftime('%b %d') %></h6>
            <%= link_to(post) do %>
              <h2><%= post.title %></h2>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-3 col-md-3"></div>
    </div>
  </div>
</div>